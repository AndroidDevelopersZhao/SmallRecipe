<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_myinfo_title"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center">

            <cn.com.xxutils.view.XXRoundImageView
                android:id="@+id/item_iv_left_title_1"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:scaleType="fitXY"
                android:src="@drawable/uerlogo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"

            android:layout_weight="2"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.4" />

            <TextView
                android:id="@+id/item_tv_title_1"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginLeft="5sp"
                android:layout_weight="0.8"
                android:gravity="center_vertical"
                android:text="飞翔的企鹅"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginLeft="5sp"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="账户ID："
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/item_tv_id_title_1"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:gravity="center_vertical"
                    android:text="55555"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_iv_right_title_1"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:src="@drawable/icon_my_title" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>