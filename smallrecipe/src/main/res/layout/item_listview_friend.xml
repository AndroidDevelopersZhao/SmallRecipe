<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_say_user_logo"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tv_say_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="飞翔的企鹅"
                    android:textColor="#d18d1a" />

                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:textColor="#ce782d" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_say_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:text=""
            android:textColor="#de1446" />

        <com.cn.smallrecipe.view.HorizontalListView
            android:id="@+id/item_lv1_images"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="15sp" />
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="5sp"-->
        <!--android:gravity="center|right"-->
        <!--android:orientation="horizontal">-->

        <!-- -->

        <!--<ImageView-->
        <!--android:id="@+id/item_iv_say"-->
        <!--android:layout_width="15sp"-->
        <!--android:layout_height="15sp"-->
        <!--android:layout_marginRight="50sp"-->
        <!--android:src="@drawable/star_on" />-->

        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="5sp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17sp"
                android:layout_height="17sp"
                android:src="@drawable/locationicon" />

            <TextView
                android:id="@+id/item_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:text="上海市" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="5sp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="17sp"
                android:layout_height="17sp"
                android:src="@drawable/likeicon" />

            <TextView
                android:id="@+id/item_tv_star_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12sp"
                android:text="800人觉得很赞" />

            <ImageView
                android:id="@+id/item_iv_like"
                android:layout_width="20sp"
                android:layout_height="20sp"
                android:layout_marginLeft="150sp"
                android:scaleType="fitXY"
                android:layout_marginRight="30sp"
                android:src="@drawable/sayicon"
                android:visibility="gone"/>
        </LinearLayout>
        <cn.com.xxutils.view.XXListView
            android:id="@+id/item_lv2_comment"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/layout_say"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/item_et_say_down"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:hint="我有话说"
                android:imeOptions="actionDone" />

            <Button
                android:id="@+id/item_phone_images"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/face_parent"
                android:text="评论" />
        </LinearLayout>
        <!-- 聊天输入框 -->
        <!--<include-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--layout="@layout/custom_facerelativelayout" />-->

    </LinearLayout>
</LinearLayout>