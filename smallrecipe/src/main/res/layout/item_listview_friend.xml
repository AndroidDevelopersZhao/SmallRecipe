<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_say_user_logo"
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tv_say_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5sp"
                    android:gravity="center"
                    android:text="飞翔的企鹅" />

                <TextView
                    android:id="@+id/item_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_tv_say_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="5sp"
            android:text="及偶发煎熬IF奖奥帆赛额哇哦IF奖阿芳女士 阿尔法金额爱减肥啦就额爱疯；骄傲；发；就" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_iv_like"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_marginRight="30sp"
                android:src="@drawable/star_on" />

            <ImageView
                android:id="@+id/item_iv_say"
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:layout_marginRight="50sp"
                android:src="@drawable/star_on" />

        </LinearLayout>


        <com.cn.smallrecipe.view.HorizontalListView
            android:id="@+id/item_lv1_images"
            android:layout_width="match_parent"
            android:layout_height="100sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="5sp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/delete_default_qq_avatar" />

            <TextView
                android:id="@+id/item_tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上海市" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_marginTop="5sp"
            android:gravity="center|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15sp"
                android:layout_height="15sp"
                android:src="@drawable/delete_default_qq_avatar" />

            <TextView
                android:id="@+id/item_tv_star_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="800人觉得很赞" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/item_et_say_down"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="我有话说"
                android:textColorHint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/item_phone_images"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/umeng_socialize_facebook" />
        </LinearLayout>

        <cn.com.xxutils.view.XXListView
            android:id="@+id/item_lv2_say_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>