<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="100sp"
            android:minWidth="100sp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_tv_search_title"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:text="红烧肉"
                android:textColor="#cc6c35"
                android:textSize="20sp" />

            <cn.com.xxutils.view.XXAlwaysMarqueeTextView
                android:id="@+id/item_tv_search_ingredients"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginTop="5sp"
                android:layout_weight="1"
                android:clickable="false"
                android:ellipsize="marquee"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_tv_search_burden"
                android:layout_width="wrap_content"
                android:layout_height="0sp"
                android:layout_marginTop="5sp"
                android:layout_weight="1"
                android:text="油,适量;盐,适量"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>